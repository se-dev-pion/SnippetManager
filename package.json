{
  "name": "snippetmanager",
  "displayName": "SnippetManager",
  "description": "Manage and organize your VSCode code snippets efficiently",
  "version": "0.0.0",
  "repository": {
    "url": "https://github.com/se-dev-pion/SnippetManager"
  },
  "engines": {
    "vscode": "^1.108.0"
  },
  "icon": "/res/icon-64.png",
  "categories": [
    "Snippets",
    "Visualization"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "SnippetManager",
      "properties": {
        "snippetManager.highlight": {
          "type": "object",
          "default": {},
          "description": "后缀高亮设置,需要用json编写",
          "order": 0
        }
      }
    },
    "commands": [
      {
        "command": "snippetManager.addFile",
        "title": "添加文件"
      },
      {
        "command": "snippetManager.delConfig",
        "title": "移除配置"
      },
      {
        "command": "snippetManager.reOpenConfig",
        "title": "重新打开配置"
      },
      {
        "command": "snippetManager.refreshHighlight",
        "title": "刷新高亮"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "snippetManagerView",
          "title": "片段管理器",
          "icon": "/res/icon-64.png"
        }
      ]
    },
    "views": {
      "snippetManagerView": [
        {
          "id": "snippetManager-loaded",
          "name": "已加载的配置文件",
          "icon": "/res/icon-64.png"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "snippetManager.addFile",
          "when": "view == snippetManager-loaded",
          "group": "navigation",
          "icon": "$(add)"
        }
      ],
      "view/item/context": [
        {
          "command": "snippetManager.delConfig",
          "when": "view == snippetManager-loaded && viewItem == configFile",
          "group": "inline"
        },
        {
          "command": "snippetManager.reOpenConfig",
          "when": "view == snippetManager-loaded && viewItem == configFile",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@types/xml2js": "^0.4.14",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "xml2js": "^0.6.2"
  }
}